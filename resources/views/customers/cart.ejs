<section class="cart p-4">
    <% if(cart.totalQuantity>0){ %>
    <div class="order-cart container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4 mb-2">
            <img src="/images/cart.png">
            <h1 class="font-bold text-2xl ml-4">Order Summary</h1>
        </div>
        <div class="pizza-list">
            <% Object.entries(cart.item).forEach(([key,value])=> {%>
                <div class="flex items-center p-2">
                    <img class="w-24" src="/images/<%=cart.item[key].pizza.image%>">
                    <div class="ml-4 flex-1">
                        <h1><%=cart.item[key].pizza.name%></h1>
                        <span><%=cart.item[key].pizza.size%></span>
                    </div>
                    <span class="flex-1"><%=cart.item[key].quantity%></span>
                    <span class="font-bold text-lg">$<%=cart.item[key].pizza.price%></span>
                </div>
            <% }) %>
        </div>
        <hr>
        <div class="text-right p-2 py-4">
            <div>
                <span class="font-bold text-lg">Total Quantity = <%=cart.totalQuantity%></span><br>
                <span class="ml-2 text-lg font-bold">Total Price = $<%=cart.totalPrice%></span>
            </div>
            <div>
                <form class="flex flex-col items-end" method="post" action="/order" id="payment">

                    <div class="mt-2 wt-1/2 mb-2">
                        <select id="paymentMethod" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 ">
                          <option selected>Choose Payment Method</option>
                          <option value="cod">Cash On Delhivery</option>
                          <option value="card">Pay with card</option>
                        </select>
                    </div>
                      
                    <input style="border: 2px solid rgb(189, 187, 187); width:45%;" type="text" class="mt-2 wt-1/2 mb-2" placeholder="Phone Number" name="phone">
                    <input style="border: 2px solid rgb(189, 187, 187); width:45%;" type="text" class="mt-2 wt-1/2" placeholder="Address" name="address">
                    <button type="submit" class="rounded-full mt-6 btn-primary">Order</button>
                </form>
            </div>
        </div>
    </div>
    <% } else { %>
     
    <div class="empty-cart">
        <div class="container mx-auto text-center py-4 items-center">
            <h1 class="mb-4 text-4xl">Cart Empty ðŸ˜”</h1>
            <p  class="text-gray-500 text-lg" >You probably have not ordered pizza yet</p><br>
            <p style="margin-top: -2rem;" class="text-gray-500 text-lg mb-12">to order a pizza go to main page.</p>
            <img class="w-1/4   mx-auto mb-2" src="/images/empty-cart.png">
            <button class="rounded-full mt-6 btn-primary" style="margin-bottom: 200px;"><a href="/">Home Page</a></button>        
        </div>
    </div>
    <% } %>
</section>